{
  "manifest_version": 3,
  "name": "Student Buddy",
  "version": "1.0.0",
  "description": "A Chrome extension to help students with coding problems on LeetCode and DSA platforms",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://*.leetcode.com/*",
    "http://localhost:8081/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Student Buddy"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
